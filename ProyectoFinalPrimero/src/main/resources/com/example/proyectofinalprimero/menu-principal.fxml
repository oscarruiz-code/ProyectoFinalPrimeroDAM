<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.proyectofinalprimero.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Text text="Bienvenido a la Biblioteca JavaFX" style="-fx-font-size: 20px;"/>

    <Button fx:id="btnGestionarLibros" text="Gestionar Libros" onAction="#handleGestionarLibros"/>
    <Button fx:id="btnAlmacenamiento" text="Almacenamiento" onAction="#handleAlmacenamiento"/>
    <Button fx:id="btnSalir" text="Salir" onAction="#handleSalir"/>
</VBox>
